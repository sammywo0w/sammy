from flask import Flask, request, send_file
from pptx import Presentation
import os
import uuid

app = Flask(__name__)

@app.route('/generate-pptx', methods=['POST'])
def generate_pptx():
    data = request.json  # Ожидается структура {"TARGET CUSTOMERS": [...], "CUSTOMER CHANNELS": [...], ...}

    if not isinstance(data, dict):
        return {"error": "Данные должны быть в виде словаря {категория: [пункты]}"}, 400

    prs = Presentation()
    slide_layout = prs.slide_layouts[1]  # Заголовок и содержимое

    for category, items in data.items():
        slide = prs.slides.add_slide(slide_layout)
        slide.shapes.title.text = category
        content = slide.placeholders[1]
        content.text = ""  # очищаем содержимое

        for item in items:
            p = content.text_frame.add_paragraph()
            p.text = item
            p.level = 0

        # Удалим пустую первую строку
        if content.text_frame.paragraphs[0].text == "":
            content.text_frame._element.remove(content.text_frame.paragraphs[0]._p)

    filename = f"{uuid.uuid4().hex}.pptx"
    filepath = f"/tmp/{filename}"
    prs.save(filepath)

    return send_file(filepath, as_attachment=True, download_name="presentation.pptx")

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000)
